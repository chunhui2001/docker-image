		<!-- <table name="device" dataNode="dn1" /> -->
	</schema>
	<schema name="cloudbox_member" dataNode="dn2" checkSQLschema="false" sqlMaxLimit="100"></schema>

	<!-- <dataNode name="dn1$0-743" dataHost="localhost1" database="db$0-743" /> -->
	<!-- 分片信息，也就是分库相关配置 -->
	<!-- name:		节点名，与 table 中 dataNode 对应 -->
	<!-- datahost:	物理数据库名，与 datahost 中 name 对应 -->
	<!-- database:	物理数据库中数据库名 -->
	<dataNode name="dn1" dataHost="localhost1" database="cloudbox_device" />
	<dataNode name="dn2" dataHost="localhost1" database="cloudbox_member" />
