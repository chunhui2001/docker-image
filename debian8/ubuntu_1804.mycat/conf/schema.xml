	<!-- 物理数据库，真正存储数据的数据库 -->
	<!-- name:		物理数据库名，与dataNode中dataHost对应 -->
	<!-- balance:	均衡负载的方式, 1:读写分离 -->
	<!-- writeType:	写入方式 -->
	<!-- dbType:	数据库类型 -->
	<!-- heartbeat:	心跳检测语句，注意语句结尾的分号要加。 -->
	<dataHost name="localhost1" maxCon="1000" minCon="10" balance="1" writeType="0" dbType="mysql" dbDriver="native" switchType="1"  slaveThreshold="100">
		<heartbeat>select user();</heartbeat>
		<!-- can have multi write hosts -->
		<writeHost host="hostM1" url="mysql_node1:3318" user="root" password="Cc">
			<!-- can have multi read hosts -->
			<readHost host="hostS2" url="mysql_node2:3319" user="root" password="Cc" />
		</writeHost>
		<!-- <writeHost host="hostS1" url="localhost:3316" user="root" password="Cc" /> -->
		<!-- <writeHost host="hostM2" url="localhost:3316" user="root" password="Cc"/> -->
	</dataHost>
